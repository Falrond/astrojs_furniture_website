---

<section class="pb-16 sm:pb-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">
        Najczęściej zadawane pytania
      </h2>
    
      <div
        class="order-2 mt-8 lg:order-1 lg:mt-0 lg:flex lg:flex-row-reverse lg:items-center lg:-mx-6"
      >
      <div class="mt-8 lg:w-3/4 lg:mx-6 lg:mt-0">
      <div class="" >

        
       {faq.map((question=>(
         <div x-data="{ expanded: false }" class="py-4 px-6 mb-4 transition-all" :class=" expanded ? 'bg-primary-500/10  rounded-3xl border-t-primary-700' : '' ">
          <h2>
            <button
              id="faqs-title-01"
              type="button"
              class="flex items-center justify-between w-full text-left font-semibold py-2"
              @click="expanded = !expanded"
              :aria-expanded="expanded"
              aria-controls="faqs-text-01"
            >
            <h3 class="text-2xl text-left font-semibold">
              {question.question}
            </h3>
             
              <svg
                class=" shrink-0 ml-8"
                width="16"
                height="16"
                xmlns="http://www.w3.org/2000/svg"
                :fill="$store.theme.isDark ? '#e7e5e4' : '#0c0a09'"
              >
                <rect
                  y="7"
                  width="16"
                  height="2"
                  rx="1"
                  class="transform origin-center transition duration-200 ease-out"
                  :class="{'!rotate-180': expanded}"></rect>
                <rect
                  y="7"
                  width="16"
                  height="2"
                  rx="1"
                  class="transform origin-center rotate-90 transition duration-200 ease-out"
                  :class="{'!rotate-180': expanded}"></rect>
              </svg>
            </button>
          </h2>
          <div
            id="faqs-text-01"
            role="region"
            aria-labelledby="faqs-title-01"
            class="grid text-sm text-slate-600 overflow-hidden transition-all duration-300 ease-in-out"
            :class="expanded ? 'grid-rows-[1fr] opacity-100' : 'grid-rows-[0fr] opacity-0'"
          >
            <div class="overflow-hidden">
              <p class="pb-3 text-base sm:text-lg">
                {question.answer}
              </p>
            </div>
          </div>
        </div>
       )))}
        </div>
      </div>
      </div>
    </div>
  </div>
</section>




